/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;

}
.server-box{
  width:100%;
  padding:0rpx 20rpx 20rpx 20rpx;
  box-sizing: border-box;
}
/* 列表 */
.list-server{
  box-sizing: border-box;
}

.list{
  box-sizing: border-box;
  width:50%;
  text-align: center;
  float: left;
  padding: 10rpx;
}

.listbox{
  border-radius: 30rpx;
  background-color: darkgray;
  box-sizing: border-box;
  width:100%;
  text-align: center;
}
.linam{
  padding-top: 30rpx;padding-bottom: 30rpx;
}
.lim{
  display: flex;
  justify-content:space-around;
  padding-bottom: 25rpx;
}

.listimg{
  width:150rpx;
  height:150rpx;
}





